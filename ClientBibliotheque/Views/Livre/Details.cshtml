@model ClientBibliotheque.ServiceReferenceBibliotheque.Livre
@using ClientBibliotheque.ServiceReferenceBibliotheque;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}


<div class="content">
    <br />
    <div class="movie_top">
       
        <div class="col-md-9 movie_box">
            <div class="grid images_3_of_2">
                <div class="movie_image">
                    <img src="@Url.Content("~/Content/images/upload/"+Model.image)" class="img-responsive" alt="" />
                </div>                
            </div>
            <div class="desc1 span_3_of_2">
                <p class="movie_option"><strong>Titre: </strong>@Model.Titre</p>
                <p class="movie_option"><strong>Isbn: </strong>@Model.isbn</p>
                <p class="movie_option"><strong>Résumé: </strong>@Model.resume</p>
                <p class="movie_option"><strong>Déscription: </strong>@Model.description</p>
                <br/><br/><br/><br/><br/>
                <div class="down_btn"><a class="btn1" href="#"><span> </span>Emprunter ce livre</a></div>
            </div>
            <div class="clearfix"> </div>
      </div>
        <div class="col-md-3">
            <div class="movie_img">
                <div class="grid_2">
                    <div class="movie__title">Categories</div><br />
                    @foreach (Categorie categorie in ViewBag.categories)
                    {
                        <p><a href="@Url.Content("/Livre/Categorie/" + @categorie.id)" class="movie__option"> @categorie.nom </a></p>

                    }
                </div>
                <br /><br />
                <div class="grid_2">
                    <div class="movie__title">Auteurs</div><br />
                    @foreach (Auteur auteur in ViewBag.auteurs)
                    {
                        <p><a href="@Url.Content("/Livre/Categorie/" + @auteur.id)" class="movie__option"> @auteur.nom&nbsp;@auteur.prenom</a></p>

                    }
                </div>

            </div>

        </div>

        <div class="clearfix"> </div>
    </div>
</div>


