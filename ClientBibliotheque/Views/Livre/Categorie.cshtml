@using ClientBibliotheque.ServiceReferenceBibliotheque;
@{
    Layout = "~/Views/Shared/_LayoutMembre.cshtml";
}

<div class="content">
    <div class="box_1">
        <div class="alert-info text-center"><h3>Liste de livres de : <strong>@ViewBag.categorie</strong></h3></div>
        <div class="search">
            <form action="Chearch" method="post">
                <input type="text" name="nom" value="Search..." onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                <input type="submit" value="">
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="box_2">
        <div class="movie_top">
            <div class="col-md-9 movie_box">
                @foreach (livreDeails livre in ViewBag.livres)
                {
                    <!-- Movie variant with time -->
                    <div class="movie movie-test movie-test-dark movie-test-left">
                        <div class="movie__images">
                            <a href="@Url.Content("/Livre/Details/" + @livre.id)" class="movie-beta__link">
                                <img alt="" src="@Url.Content("~/Content/images/upload/" + @livre.image)" class="img-responsive" />
                                <form>
                                    <input type="hidden" name="userHidden" value="" />

                                </form>
                            </a>

                        </div>
                        <div class="movie__info">
                            <a href="@Url.Content("/Livre/Details/" + @livre.id)" class="movie__title">@livre.titre</a>


                            <p>
                                <span class="movie_titre">Catégorie : </span>
                                <a href="@Url.Content("/Livre/Categorie/" + @livre.categorieid)" class="movie__option"> @livre.categorie </a>
                            </p>
                            <p>
                                <span class="movie_titre">Auteur : </span>
                                <a href="@Url.Content("/Livre/Auteur/" + @livre.auteurid)" class="movie__option">@livre.auteur</a>
                            </p>
                            <p>
                                <span class="movie_titre">Resumé : </span>
                                <span class="movie__option">@livre.resume</span>
                            </p>

                        </div>
                        <div class="clearfix"> </div>
                    </div>
                }
            </div>

            <div class="col-md-3">
                <div class="movie_img">
                    <div class="grid_2">
                        <div class="movie__title">Categories</div><br />
                        @foreach (Categorie categorie in ViewBag.categories)
                        {
                            <p><a href="@Url.Content("/Livre/Categorie/" + @categorie.id)" class="movie__option"> @categorie.nom </a></p>

                        }
                    </div>
                    <br /><br />
                    <div class="grid_2">
                        <div class="movie__title">Auteurs</div><br />
                        @foreach (Auteur auteur in ViewBag.auteurs)
                        {
                            <p><a href="@Url.Content("/Livre/Categorie/" + @auteur.id)" class="movie__option">@auteur.nom&nbsp;@auteur.prenom</a></p>

                        }
                    </div>

                </div>

            </div>
        </div>

        <div class="clearfix"> </div>
    </div>
</div>