@using ClientBibliotheque.ServiceReferenceBibliotheque;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="col-lg-12 col-lg-offset-0 ">
        <div class="alert-info text-center"><h3>Liste des livres de : <strong>@ViewBag.categorie</strong></h3></div>
        
        @if (ViewBag.livres != null)
        {
            <div class="search">
                <form action="Chearch" method="post">
                    <input type="text" name="nom" value="Search..." onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                    <input type="submit" value="">
                </form>
            </div>

            <center>
                <div class="news-letter">
                    @Html.ActionLink("Nouveau livre", "CreateLivre")
                </div>
            </center>

            <div class="box_2">
                <div class="movie_top">
                    <div class="col-md-12 movie_box">
                        @foreach (livreDeails livre in ViewBag.livres)
                        {
                    <!-- Movie variant with time -->
                            <div class="movie movie-test movie-test-dark movie-test-left">
                                <div class="movie__images">
                                    <a href="@Url.Content("/Livre/Details/" + @livre.id)" class="movie-beta__link">
                                        <img alt="" src="@Url.Content("~/Content/images/upload/" + @livre.image)" class="img-responsive" />
                                        <form>
                                            <input type="hidden" name="userHidden" value="" />

                                        </form>
                                    </a>

                                </div>
                                <div class="movie__info">
                                    <a href="@Url.Content("/Livre/Details/" + @livre.id)" class="movie__title">@livre.titre</a>

                                    <p> 
                                        <span class="movie_titre">Isbn : </span>
                                        <span> @livre.isbn</span> 
                                    </p>
                                    
                                    <p>
                                        <span class="movie_titre">Auteur : </span>
                                        <span class="movie__option">@livre.auteur</span> 
                                    </p>
                                    <p>
                                        <span class="movie_titre">Resumé : </span>
                                        <span class="movie__option">@livre.resume</span>
                                    </p>
                                    <br /><br />
                                    <center>
                                        @Html.ActionLink("Edit", "Edit", new { id = livre.id }) &nbsp;&nbsp;
                                        @Html.ActionLink("Details", "Details", new { id = livre.id }) &nbsp;&nbsp;
                                        @Html.ActionLink("Delete", "Delete", new { id = livre.id }) 

                                    </center>

                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }
                    </div>

                </div>
                <div class="clearfix"> </div>
            </div>

        }
        else
        {
            <center>
                <div class="news-letter"> Cette categorie ne contient encore aucun livre </div>
            </center>
        }
       
    </div>

    <div class="clearfix"> </div>
</div>
