@using ClientBibliotheque.ServiceReferenceBibliotheque;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="col-lg-12 col-lg-offset-0 ">
        <div class="alert-info text-center"><h3>Liste categories</h3></div>
        
            <div class="search">
                <form action="Chearch" method="post">
                    <input type="text" name="nom" value="Search..." onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                    <input type="submit" value="">
                </form>
            </div>
            <center>
                <div class="news-letter">
                    @Html.ActionLink("Nouvelle categorie", "Create")
                </div>
            </center>
            <div class="box_3">
                <div class="movie_top">
                    <div class="col-md-12 movie_box">
                        @foreach (Categorie categorie in ViewBag.categories)
                        {
                    <!-- Movie variant with time -->
                            <div class="movie movie-test movie-test-dark movie-test-left" id="cat">
                                <div class="movie__info">
                                    <center>
                                        <p> <span class="movie_titre">categorie :  </span>@categorie.id &nbsp;
                                            <span>
                                                <a href="@Url.Content("/Categorie/Edit/" + @categorie.id)">
                                                    <img alt="editer" src="@Url.Content("~/Content/images/edit.png")"/>                                               
                                                </a></span> 
                                            <span> 
                                                <a href="@Url.Content("/Categorie/Delete/" + @categorie.id)">
                                                    <img alt="supprimer" src="@Url.Content("~/Content/images/suppr.png")"/> 
                                                </a>
                                            </span>

                                        </p>
                                        <br /><br />
                                        <p> <span class="movie_titre">Nom : </span> <a href="@Url.Content("/Categorie/Details/" + @categorie.id)" class="movie__title">@categorie.nom</a></p>
                                        <p> <span class="movie_titre">Description : </span> @categorie.description </p>
                                        <p> <span class="movie_titre">Nombre d'exemplaires : </span> 10 </p><br /><br />

                                        <span>@Html.ActionLink("livres de cette categorie", "livres", new { id = categorie.id }) </span>
                                    </center>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
         
        </div>

    <div class="clearfix"> </div>
</div>




