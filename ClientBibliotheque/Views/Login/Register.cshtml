@model ClientBibliotheque.ServiceReferenceBibliotheque.Utilisateur

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="register">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            {
                <div>
                    <div class="register-top-grid">
                        <h3>Personal Information</h3>
                        <div>
                            <span>First Name<label>*</label></span>
                            @Html.TextBoxFor(model => model.nom, new { @id = "nom", @class = "form-control", placeholder = "entez votre nom" })
                        </div>

                        <div>
                            <span>Last Name<label>*</label></span>
                            @Html.TextBoxFor(model => model.prenom, new { @id = "prenom", @class = "form-control", placeholder = "entez votre prénom" })
                        </div>

                        <div>
                            <span>Email Address<label>*</label></span>
                            @Html.TextBoxFor(model => model.email, new { @id = "email", @class = "form-control", placeholder = "entez votre adrese-nom" })
                        </div>

                        <div>
                            <span>Username<label>*</label></span>
                            @Html.TextBoxFor(model => model.nomUser, new { @id = "nomuser", @class = "form-control", placeholder = "nom d'utilisateur" })
                        </div>

                        <div>
                            <span>sexe<label>*</label></span>
                            <label class="radio">@Html.RadioButtonFor(model => model.sexe, "Masculin", true) Masculin</label>
                            <label class="radio">@Html.RadioButtonFor(model => model.sexe, "Feminin", false) Feminin</label>
                            @Html.ValidationMessageFor(model => model.sexe)
</div>


                        <div class="clearfix"> </div>
                        <a class="news-letter" href="#">
                            <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Sign Up for Newsletter</label>
                        </a>
                    </div>

                    <div class="register-bottom-grid">
                        <h3>Login Information</h3>
                        <div>
                            <span>Password<label>*</label></span>
                            @Html.PasswordFor(model => model.motdepasse, new { @id = "password", @class = "form-control", placeholder = "password" })
                        </div>
                        <div>
                            <span>Confirm Password<label>*</label></span>
                            <input type="text" name="passwordConfirm" placeholder="Confirm Password" class="form-control" />

                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
                <div class="register-but">
                    <div>
                        <input type="submit" value="submit" id="submit">
                        <div class="clearfix"> </div>
                    </div>
                </div>

            }
        }
    </div>
</div>





