
@using ClientBibliotheque.ServiceReferenceBibliotheque;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="col-lg-12 col-lg-offset-0 ">
        <div class="alert-info text-center"><h3>Liste filières</h3></div>
        <table class=" table table-hover ">
            <tr>
                <th>nom</th>
                <th>prénom</th>
                <th>sexe</th>
                <th>email</th>
                <th>nationalité</th>
                <th>apropos</th>
                <th>&nbsp;</th>
            </tr>
            @foreach (Auteur auteur in ViewBag.auteurs)
            {
                <tr>
                    <td> @auteur.nom</td>
                    <td> @auteur.prenom</td>
                    <td> @auteur.sexe</td>
                    <td> @auteur.email</td>
                    <td> @auteur.nationalite</td>
                    <td> @auteur.apropos</td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = auteur.id }) |
                        @Html.ActionLink("Details", "Details", new { id = auteur.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = auteur.id }) |
                        
                    </td>
                </tr>
            }
        </table>
        <div>
            @Html.ActionLink("New Filière", "Create")
        </div>
    </div>

    <div class="clearfix"> </div>
</div>

